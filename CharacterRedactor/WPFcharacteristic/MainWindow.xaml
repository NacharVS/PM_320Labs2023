        <TextBlock x:Name="Strength" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="130,255,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="40" Background="#FFEBEBEB" TextAlignment="Center"/>
        <TextBlock x:Name="Health" Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="626,250,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="27" TextAlignment="Center"/>
        <TextBlock x:Name="Mana" Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="626,272,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="27" TextAlignment="Center"/>
        <TextBlock x:Name="PhysicalAttack" Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="626,294,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="27" TextAlignment="Center"/>
        <TextBlock x:Name="MagicAttack" Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="626,316,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="27" TextAlignment="Center"/>
        <TextBlock x:Name="PhysicalDefense" Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="626,338,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="27" TextAlignment="Center"/>
