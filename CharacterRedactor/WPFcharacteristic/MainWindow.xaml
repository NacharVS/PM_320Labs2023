            <System:String>Warrior</System:String>
            <System:String>Rogue</System:String>
            <System:String>Wizard</System:String>
        </ComboBox>
        <Button x:Name="DexterityPlus" Grid.Column="1" Content="+" HorizontalAlignment="Left" Margin="176,280,0,0" Grid.Row="1" VerticalAlignment="Top" Height="20" Width="18" Click="DexterityPlus_Click" Background="#FFB4D9FF" BorderBrush="#FFB4D9FF"/>
        <Button x:Name="ConstitutionPlus" Grid.Column="1" Content="+" HorizontalAlignment="Left" Margin="176,303,0,0" Grid.Row="1" VerticalAlignment="Top" Height="20" Width="18" Click="ConstitutionPlus_Click" BorderBrush="#FFB4D9FF" Background="#FFB4D9FF"/>
        <Button x:Name="IntelligencePlus" Grid.Column="1" Content="+" HorizontalAlignment="Left" Margin="176,327,0,0" Grid.Row="1" VerticalAlignment="Top" Height="20" Width="18" Click="IntelligencePlus_Click" BorderBrush="#FFB4D9FF" Background="#FFB4D9FF"/>
