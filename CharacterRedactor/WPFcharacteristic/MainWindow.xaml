        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Height="17" Margin="505,250,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="76" Text="Health" FontSize="16" FontFamily="Poor Richard"/>
