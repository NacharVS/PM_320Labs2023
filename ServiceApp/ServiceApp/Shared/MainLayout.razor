@inherits LayoutComponentBase
@using Services
@using Data
@inject ILocalStorageService LocalStorage
@inject NavigationManager Navigation
@inject CurrentUser UserCurrent
@inject CurrentUsersRole UserCurrentRole

<PageTitle>ServiceApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <b @onclick = "ClickingIn">@UserCurrent.CurrentU?.Login</b>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private void ClickingIn()
    {
        Navigation.NavigateTo("/mainproj");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            User newUser = await LocalStorage.GetAsync<User>("Autho");
            if(newUser is not null)
            {
                UserCurrent.CurrentU = newUser;
                StateHasChanged();
            }
        }
    }
}