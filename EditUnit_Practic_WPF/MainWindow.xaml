                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="MP:" VerticalAlignment="Top" FontSize="16" Height="21" Width="27" Margin="44,83,0,0" Foreground="White" Grid.Row="1"/>
                    <TextBlock x:Name="tbMPR" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="82,83,0,0" Foreground="White" Grid.Row="1" Width="27" Height="21"/>

                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="LvL:" VerticalAlignment="Top" FontSize="16" Height="21" Width="27" Margin="44,123,0,0" Foreground="White" Grid.Row="1"/>
                    <TextBlock x:Name="tbLvlR" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="82,123,0,0" Foreground="White" Grid.Row="1" Width="27" Height="21"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Boost points:" VerticalAlignment="Top" FontSize="16" Height="21" Width="92" Margin="44,151,0,0" Foreground="White" Grid.Row="1"/>
                    <TextBlock x:Name="tbBoostPointsR" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="147,151,0,0" Foreground="White" Grid.Row="1" Width="27" Height="21"/>

                    <Button x:Name="intBtnMin_CopyR" Content="+100xp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="70" Click="intBtnMin_Click" Margin="16,191,0,0" Grid.Row="1"/>
