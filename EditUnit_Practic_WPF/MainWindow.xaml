<Window x:Class="EditUnit_Practic_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditUnit_Practic_WPF"
        mc:Ignorable="d"
        Title="Edit unit" Height="675" Width="877" ResizeMode="CanMinimize" Icon="/Icon.png" Initialized="Window_Initialized">
    <Grid>
        <TabControl>
            <TabItem x:Name="TbItWarrior" Header="Warrior">
                <Grid Background="#FF313030">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="45*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="257*"/>
                        <RowDefinition Height="203*"/>
                        <RowDefinition Height="171*"/>
                    </Grid.RowDefinitions>
                    <Image Margin="15,15,15,10" Source="/Warrior.png"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="49,42,0,0" TextWrapping="Wrap" Text="Strength:" VerticalAlignment="Top" FontSize="16" Height="21" Width="64" Foreground="White"/>
                    <Grid Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="149,42,0,0" VerticalAlignment="Top" Width="110">
                        <Button x:Name="strBtnMin" Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="20"/>
                        <Button x:Name="strBtnMax" Content="+" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" Height="20" Width="20"/>
                        <TextBlock x:Name="tbStrength" HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
                    </Grid>

                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="49,92,0,0" TextWrapping="Wrap" Text="Dexterity:" VerticalAlignment="Top" FontSize="16" Height="21" Width="67" Foreground="White"/>
                    <Grid Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="149,92,0,0" VerticalAlignment="Top" Width="110">
                        <Button x:Name="dexBtnMin" Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="20"/>
                        <Button x:Name="dexBtnMax" Content="+" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" Height="20" Width="20"/>
                        <TextBlock x:Name="tbDexterity" HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
                    </Grid>

                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="49,142,0,0" TextWrapping="Wrap" Text="Constitution:" VerticalAlignment="Top" FontSize="16" Height="21" Width="90" Foreground="White"/>
                    <Grid Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="149,142,0,0" VerticalAlignment="Top" Width="110">
                        <Button x:Name="consBtnMin" Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="20"/>
                        <Button x:Name="consBtnMax" Content="+" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" Height="20" Width="20"/>
                        <TextBlock x:Name="tbConstitution" HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
                    </Grid>

                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="49,192,0,0" TextWrapping="Wrap" Text="Intelligence:" VerticalAlignment="Top" FontSize="16" Height="21" Width="85" Foreground="White"/>
                    <Grid Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="149,192,0,0" VerticalAlignment="Top" Width="110">
                        <Button x:Name="intBtnMin" Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="20"/>
                        <Button x:Name="intBtnMax" Content="+" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" Height="20" Width="20"/>
                        <TextBlock x:Name="tbIntelligence" HorizontalAlignment="Center" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
                    </Grid>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="HP:" VerticalAlignment="Top" FontSize="16" Height="21" Width="27" Margin="44,17,0,0" Foreground="White" Grid.Row="1"/>
                    <TextBlock x:Name="tbHP" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="82,17,0,0" Foreground="White" Grid.Row="1" Width="27"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="MP:" VerticalAlignment="Top" FontSize="16" Height="21" Width="27" Margin="44,46,0,0" Foreground="White" Grid.Row="1"/>
                    <TextBlock x:Name="tbMP" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="82,46,0,0" Foreground="White" Grid.Row="1" Width="27"/>

                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Atack point:" VerticalAlignment="Top" FontSize="16" Height="21" Width="85" Margin="46,16,0,0" Foreground="White" Grid.Row="2"/>
                    <TextBlock x:Name="tbAtackPoint" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="143,16,0,0" Foreground="White" Grid.Row="2" Width="27"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Magic atack point:" VerticalAlignment="Top" FontSize="16" Height="21" Width="130" Margin="46,45,0,0" Foreground="White" Grid.Row="2"/>
                    <TextBlock x:Name="tbMagicAtackPoint" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="185,45,0,0" Foreground="White" Grid.Row="2" Width="26"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Physical protection point:" VerticalAlignment="Center" FontSize="16" Height="21" Width="179" Margin="46,0,0,0" Foreground="White" Grid.Row="2"/>
                    <TextBlock x:Name="tbPhysicalProtectionPoint" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" FontSize="16" Margin="234,0,0,0" Foreground="White" Grid.Row="2" Width="26"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TbItRogue" Header="Rogue">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="263*"/>
                        <ColumnDefinition Width="687*"/>
                        <ColumnDefinition Width="244*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="257*"/>
                        <RowDefinition Height="203*"/>
                        <RowDefinition Height="171*"/>
                    </Grid.RowDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Image Margin="15,15,15,10" Source="/Rogue.png"/>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem x:Name="TbItWizard" Header="Wizard">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="263*"/>
                        <ColumnDefinition Width="687*"/>
                        <ColumnDefinition Width="244*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="257*"/>
                        <RowDefinition Height="203*"/>
                        <RowDefinition Height="171*"/>
                    </Grid.RowDefinitions>
                    <Image Margin="15,15,15,10" Source="/Wizard2.png"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
