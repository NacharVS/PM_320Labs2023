                    <TextBlock x:Name="tbBoostPoints" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="147,151,0,0" Foreground="White" Grid.Row="1" Width="27" Height="21"/>

                    <Button x:Name="intBtnMin_Copy" Content="+100xp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="70" Click="intBtnMin_Click" Margin="16,191,0,0" Grid.Row="1"/>
                    <Button x:Name="intBtnMin_Copy1" Content="+300xp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="70" Click="intBtnMin_Click" Margin="112,191,0,0" Grid.Row="1"/>
                    <Button x:Name="intBtnMin_Copy2" Content="+1000xp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="70" Click="intBtnMin_Click" Margin="206,191,0,0" Grid.Row="1"/>

                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Atack point:" VerticalAlignment="Top" FontSize="16" Height="21" Width="85" Margin="44,16,0,0" Foreground="White" Grid.Row="2"/>
                    <TextBlock x:Name="tbAtackPoint" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="143,16,0,0" Foreground="White" Grid.Row="2" Width="27" Height="21"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Magic atack point:" VerticalAlignment="Top" FontSize="16" Height="21" Width="130" Margin="44,49,0,0" Foreground="White" Grid.Row="2"/>
                    <TextBlock x:Name="tbMagicAtackPoint" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="185,49,0,0" Foreground="White" Grid.Row="2" Width="26" Height="21"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Physical protection point:" VerticalAlignment="Top" FontSize="16" Height="21" Width="179" Margin="44,86,0,0" Foreground="White" Grid.Row="2"/>
                    <TextBlock x:Name="tbPhysicalProtectionPoint" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="235,86,0,0" Foreground="White" Grid.Row="2" Width="26" Height="21"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Height="70" Margin="389,37,0,0" Grid.Row="2" TextWrapping="Wrap" Text="тут сейв и лоад" VerticalAlignment="Top" Width="151" TextAlignment="Center"/>
                </Grid>
