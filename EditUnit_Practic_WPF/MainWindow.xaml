                    <TextBlock x:Name="tbAtackPointR" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="16" Margin="143,16,0,0" Foreground="White" Grid.Row="2" Width="27" Height="21"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Magic atack point:" VerticalAlignment="Top" FontSize="16" Height="21" Width="130" Margin="44,49,0,0" Foreground="White" Grid.Row="2"/>
