@page "/UserPage"
@using DocumentApp.Models
@using DocumentApp.Services
@using Microsoft.AspNetCore.Components
@using ZstdSharp.Unsafe
@inject UserService UserService;
@inject RoleService RoleService;

<section class="vh-200 bg-image"
         style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Регистрация аккаунта</h2>

                            <form>
                                @if (UserService.CurrentUser is not null)
                                {
                                     user = UserService.CurrentUser;
                                }

                                <div class="form-outline mb-4">
                                    <input type="email" class="form-control form-control-lg" @bind-value="@user.Email"/>
                                    <label class="form-label">Ваш Email</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" class="form-control form-control-lg" @bind-value="@user.Phone"/>
                                    <label class="form-label">Ваш номер телефона</label>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">@_roleName</label>
                                    <label class="form-label">Роль</label>
                                    @switch (_roleName)
                                    {
                                        case "Заказчик":
                                            <CustomerRegPage @ref="_customerRegPage" IsCabinet="@true"/>
                                            break;
                                        case "Проектировщик":
                                            <DesignerRegPage @ref="_designerRegPage" IsCabinet="@true"/>
                                            break;
                                        case "Застройщик":
                                            <BuilderRegPage @ref="_builderRegPage" IsCabinet="@true"/>
                                            break;
                                    }
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@code {
    private User user;
    private CustomerRegPage? _customerRegPage;
    private BuilderRegPage? _builderRegPage;
    private DesignerRegPage? _designerRegPage;

    private string? _roleName;

    protected override void OnInitialized()
    {
        _roleName = RoleService.GetRoleNameById(UserService.CurrentUser?.RoleId);
    }

}