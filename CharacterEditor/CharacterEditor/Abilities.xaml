<Window x:Class="CharacterEditor.Abilities"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterEditor"
        mc:Ignorable="d"
        Title="Abilities" Height="450" Width="800">
    <Grid>
        <ListView  x:Name="lvAbilities" SelectionChanged="lvAbilities_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="200">Ability</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=HealthChange}" Width="100">HP Change</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=AttackChange}" Width="100">Attack change</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=MagicalAttackChange}" Width="150">Magical attack chnage</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=PhysicalDefChange}" Width="150">Physical def change</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=ManaChange}" Width="100">Mana change</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
