<Window x:Class="CharacterEditor.WPF.Windows.TextPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterEditor.WPF.Windows"
        mc:Ignorable="d"
        Title="Add item" Height="100" Width="250"
        FocusManager.FocusedElement="{Binding ElementName=ResponseTextBox}">
    <StackPanel>
        <TextBlock Text="Enter the item name" />
        <TextBox x:Name="ResponseTextBox" KeyDown="ResponseTextBox_KeyDown" />
        <Button Content="OK" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Click="Button_Click" />
    </StackPanel>
</Window>
