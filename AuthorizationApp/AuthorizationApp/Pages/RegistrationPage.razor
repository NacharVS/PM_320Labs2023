@page "/RegistrationPage"
@using AuthorizationApp.Data
@inject Services.IAuthorizationService AuthorizationService;
@inject Services.IEncryptionService EncryptionService;
@inject Services.IUserIdentityService UserIdentityService
@inject NavigationManager NavigationManager
<h3>RegistrationPage</h3>
@if (UserIdentityService.CurrentUser is not null)
{
    NavigationManager.NavigateTo("/MainPage");
}
<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <EditForm Model="@_user" OnValidSubmit="@Register" class="mx-1 mx-md-4">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <InputText @bind-Value="@_user.Name" type="text" id="form3Example1c" class="form-control"/>
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <InputText @bind-Value="@_user.Surname" type="text" id="form3Example1c" class="form-control"/>
                                            <label class="form-label" for="form3Example1c">Your Surame</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <InputText @bind-Value="@_user.Login" type="text" id="form3Example1c" class="form-control"/>
                                            <label class="form-label" for="form3Example1c">Your Login</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <InputText @bind-Value="@_user.Email" type="email" id="form3Example3c" class="form-control"/>
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <InputText @bind-Value="@_password" type="password" id="form3Example4c" class="form-control"/>
                                            <label class="form-label" for="form3Example4c">Password</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <InputText @bind-Value="@_repeatpassword" type="password" id="form3Example4cd" class="form-control"/>
                                            <label class="form-label" for="form3Example4cd">Repeat your password</label>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" class="btn btn-primary btn-lg" value="Register"/>
                                    </div>

                                </EditForm>

                                @if (_isExistingUser)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        User already exists!
                                    </div>
                                }

                                @if (!_passwordsAreEqual)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        Passwords don't match!
                                    </div>
                                }

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private readonly User _user = new();
    private string? _password;
        private string? _repeatpassword;
    private bool _isExistingUser;
    private bool _passwordsAreEqual = true;

    private async Task Register()
    {
        if (_password is null)
            return;
        
        if (_password != _repeatpassword)
        {
            _passwordsAreEqual = false;
            return;
        }

        _passwordsAreEqual = true;
        _user.Password = EncryptionService.EncryptPassword(_password);
        if (!await AuthorizationService.Register(_user))
        {
            _isExistingUser = true;
            return;
        }
        NavigationManager.NavigateTo("/AuthorizationPage");
    }

}