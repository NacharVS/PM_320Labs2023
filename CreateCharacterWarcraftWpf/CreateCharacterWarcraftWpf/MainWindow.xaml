        </TextBox>
        <TextBox x:Name="tbMpInfo" HorizontalAlignment="Left" Margin="83,318,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="36" IsReadOnly="True" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <TextBox.Background>
