    <Window.Background>
        <ImageBrush ImageSource="/Images/image.jpg"/>
    </Window.Background>
    <Grid x:Name="MainForm" Margin="10,10,10,20">
        <TextBox x:Name="tbInfChsChr" HorizontalAlignment="Left" Margin="412,10,0,0" TextWrapping="Wrap" Text="Choose character:" VerticalAlignment="Top" Width="191" FontSize="30" IsReadOnly="True" FontFamily="Chiller" FontWeight="Bold" SelectionTextBrush="White">
            <TextBox.Foreground>
                <ImageBrush ImageSource="/Images/image.jpg"/>
            </TextBox.Foreground>
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <ComboBox x:Name="cmBxChooseCharacter" HorizontalAlignment="Left" Margin="608,10,0,0" VerticalAlignment="Top" Width="356" Height="42" FontSize="30" SelectionChanged="cmBxChooseCharacter_SelectionChanged" Opacity="0.5" FontFamily="Chiller">
            <ComboBox.Foreground>
                <ImageBrush ImageSource="/Images/image.jpg"/>
            </ComboBox.Foreground>
            <ComboBox.BorderBrush>
                <SolidColorBrush Color="#FFACACAC" Opacity="1"/>
            </ComboBox.BorderBrush>
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.485">
                    <GradientStop Color="#FFF0F0F0" Offset="1"/>
                    <GradientStop Color="#FFE5E5E5"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <TextBlock>Warrior</TextBlock>
            <TextBlock>Rogue</TextBlock>
            <TextBlock>Wizard</TextBlock>
        </ComboBox>
        <TextBox x:Name="tbInfName" HorizontalAlignment="Left" Margin="47,71,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="157" IsReadOnly="True" FontFamily="Chiller" FontSize="20" FontStretch="Medium" FontWeight="Bold">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
            <TextBox.Foreground>
                <ImageBrush ImageSource="/Images/image.jpg" Stretch="None"/>
            </TextBox.Foreground>
        </TextBox>
        <TextBox x:Name="tbInfDex" HorizontalAlignment="Left" Margin="47,102,0,0" TextWrapping="Wrap" Text="Dexterity" VerticalAlignment="Top" Width="157" IsReadOnly="True" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
            <TextBox.Foreground>
                <ImageBrush ImageSource="/Images/image.jpg" Stretch="None"/>
            </TextBox.Foreground>
        </TextBox>
        <TextBox x:Name="tbInfStr" HorizontalAlignment="Left" Margin="47,133,0,0" TextWrapping="Wrap" Text="Strength" VerticalAlignment="Top" Width="157" IsReadOnly="True" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
