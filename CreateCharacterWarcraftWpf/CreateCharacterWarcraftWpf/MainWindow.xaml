            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="tbSpInfo" HorizontalAlignment="Left" Margin="83,348,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="36" IsReadOnly="True" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="tbApInfo" HorizontalAlignment="Left" Margin="114,378,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" IsReadOnly="True" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <TextBox.Background>
