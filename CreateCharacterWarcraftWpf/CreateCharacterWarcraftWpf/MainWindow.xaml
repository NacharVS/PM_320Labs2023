            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="tbPrDetInfo" HorizontalAlignment="Left" Margin="134,408,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="36" IsReadOnly="True" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="tbInfo" HorizontalAlignment="Left" Margin="743,71,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="221" Height="180" IsReadOnly="True" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="6" FontStyle="Italic" FontStretch="Medium">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>

        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="743,410,0,0" VerticalAlignment="Top" Height="28" Width="108" Click="btnSave_Click" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnLoad" Content="Load" HorizontalAlignment="Left" Margin="854,410,0,0" VerticalAlignment="Top" Height="28" Width="110" Click="btnLoad_Click" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnAdd" Content="Add character" HorizontalAlignment="Left" Margin="412,257,0,0" VerticalAlignment="Top" Height="57" Width="164" Click="btnAdd_Click" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnInfo" Content="Info" HorizontalAlignment="Left" Margin="743,257,0,0" VerticalAlignment="Top" Height="57" Width="102" Click="btnInfo_Click" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="20" FontStyle="Italic" FontStretch="Medium">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnClear" Content="Clear info" HorizontalAlignment="Left" Margin="850,258,0,0" VerticalAlignment="Top" Height="56" Width="112" Click="btnClear_Click" FontFamily="Chiller" FontWeight="UltraBlack" FontSize="16" FontStyle="Italic" FontStretch="Medium">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
            </Button.Background>
        </Button>

        <Button x:Name="btnDex" Content="+" HorizontalAlignment="Left" Margin="16,102,0,0" VerticalAlignment="Top" Height="26" Width="26" FontWeight="Bold" FontSize="16" Click="btnDex_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnStr" Content="+" HorizontalAlignment="Left" Margin="16,133,0,0" VerticalAlignment="Top" Height="26" Width="26" FontWeight="Bold" FontSize="16" Click="btnStr_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
